- if applicants.empty?
	%p.lead= t('.empty')

- else
	%table.table.table-striped
		%thead
			%tr
				%th #
				%th= t('.applicant_name')
				%th= t('.requests_count')
		%tbody
			- i = 1
			- applicants.each do |applicant|
				%tr
					%td= i
					- i += 1
					%td= link_to applicant.name, applicant
					%td= applicant.requests.size