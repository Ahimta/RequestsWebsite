%label.lead{ for: 'companions' }= t('.companions')

= f.fields_for :companions, id: 'companions' do |h|
	%div
		- birthdate, name, relation = t('.birthdate'), t('.name'), t('.relation')
		= h.text_field :name, placeholder: name, class: get_mini_input_class
		= h.text_field :relation, placeholder: relation, class: get_mini_input_class
		= h.text_field :birthdate, placeholder: birthdate, class: get_mini_input_class