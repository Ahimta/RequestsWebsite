%html
	%head
		%title
			= t('.page_title') + ' -'
			= yield :title
		= stylesheet_link_tag :application
		= javascript_include_tag :application
		= csrf_meta_tags
	- ar = I18n.locale == :ar
	%body{ dir: ar ? 'rtl' : 'ltr', style: 'background-color: #888' }
		%header{ style: 'margin-bottom: 50px' }
			%div.navbar.navbar-static-top
				%div.navbar-inner
					%div.container
						- pull = ar ? 'pull-left' : 'pull-right'
						%div.navbar-form{ class: pull }
							= link_to t('.locale'), requests_path(locale: ar ? 'en' : 'ar'), class: 'btn btn-primary'
							- if @current_user
								= link_to t('.logout'), logout_users_path, method: :delete, class: 'btn btn-danger'
						
						- pull2 = ar ? 'pull-right' : 'pull-left'
						- if @current_user
							%ul.nav{ class: pull2 }
								%li{ class: @requests_link }= link_to t('.requests'), requests_path
								%li{ class: @alerts_link }= link_to t('.alerts'), alerts_path
								%li{ class: @locations_link }= link_to t('.locations'), locations_path
								%li{ class: @users_link }= link_to t('.users'), users_path
						- else
							= form_tag login_users_path, class: 'navbar-form ' + pull2 do
								- username, password = t('.username'), t('.password')
								= text_field :login, :username, class: 'span2', placeholder: username, autofocus: ''
								= password_field :login, :password, class: 'span2', placeholder: password
								= submit_tag t('.login'), class: 'btn btn-success'
			
			- notice, warning = flash[:notice], flash[:warning]
			
			- if notice
				%div.alert.alert-success.text-center
					%button.close{ type: 'button', 'data-dismiss' => 'alert' } &times
					= notice
			- elsif warning
				%div.alert.alert-error.text-center
					%button.close{ type: 'button', 'data-dismiss' => 'alert' } &times
					= warning
		
		%div.container.text-center.well.well-small
			= yield
			
