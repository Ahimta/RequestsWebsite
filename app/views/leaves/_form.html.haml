= form_for @leave do |f|
	%div.page-header
		%h1= action
	= f.fields_for :request do |h|
		= h.hidden_field :rtype, value: t('.type')
		= h.fields_for :applicant do |i|
			= i.hidden_field :user_id, value: 0
			- applicant = t(:applicant)
			%div= i.text_field :name, placeholder: applicant, autofocus: ''
	
	- reason = t('.reason')
	%div= f.text_field :reason, placeholder: reason
	
	= eval render_submit_field
