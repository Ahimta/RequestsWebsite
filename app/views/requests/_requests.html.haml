- if requests.empty?
	%p.lead= t('.empty')
	
- else
	%table.table
		%thead
			%tr
				%th #
				%th= t(:applicant)
				%th= t('.request_type')
				%th= t('.status')
				%th= t('.decide')
		%tbody
			- i = 1
			- requests.each do |request|
				%tr{ class: get_row_class(request.accepted) }
					%td
						= link_to i, request
						- i += 1
					%td= link_to request.applicant_name, request.applicant
					%td= t(request.rtype.try :to_sym)
					%td
						- if request.decision
							= link_to t('.accepted'), request_decision_path(request, request.decision)
						- else
							= get_status(request.accepted)
					%td= render partial: '/requests/requests_btn_group', layout: '/layouts/btn_group', locals: { request: request }
