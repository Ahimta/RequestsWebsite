= provide :title, action

= form_for @ticket do |f|
	= render '/requests/form', f: f, type: Ticket::Type, action: action
	
	%div= f.text_field :line, placeholder: t('.line')
	%div= f.text_field :number, placeholder: t('.number')
	
	= render '/companions/form', f: f
	= render '/passports/passport', passport: @ticket.passport
	= render '/passports/form', f: f
	
	= render '/shared/form_footer', f: f, action: action
