- header = t('.header')
= provide :title, header

%div.page-header
	%h1= header

%div.lead
	%p
		%b= t(:applicant) + ': '
		= ticket.request.applicant.name
	
	%p
		%b= t('tickets.form.line') + ': '
		= ticket.line
	
	- if ticket.number.try(:present?)
		%p
			%b= t('tickets.form.number') + ': '
			= ticket.number