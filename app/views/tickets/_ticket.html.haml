= render '/shared/request_header', header: t('.header'), request: ticket
	
%p
	%b= t('tickets.form.line') + ': '
	= ticket.line
	
- if ticket.number.try(:present?)
	%p
		%b= t('tickets.form.number') + ': '
		= ticket.number

= render '/passports/passport', passport: ticket.passport

= render '/companions/companions', companions: ticket.companions

= render '/shared/resource_footer', back_path: requests_path, edit_path: edit_ticket_path(ticket), resource: ticket.request
