- if users.present?
	%table.table.table-striped
		%thead
			%tr
				%th #
				%th= t('users.form.username')
				%th= t('users.form.location')
				%th= t('.applicants_count')
				%th= t('.requests_count')
				%th= t('.modify')
		%tbody
			- i = 1
			- users.each do |user|
				%tr
					%td= i
					- i += 1
					%td= link_to user.username, user
					%td= link_to user.location_name, user.location
					%td= user.applicants.count
					%td= user.requests.count
					%td
						%div.btn-group{ dir: 'ltr' }
							= link_to t(:edit), edit_user_path(user), class: get_btn_class(:edit)
							= link_to t(:destroy), user, method: :delete, class: get_btn_class(:destroy)
- else
	%div.lead= t('.empty')