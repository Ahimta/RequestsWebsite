- header = t('.header')
= provide :title, header

%div.page-header
	%h1= header

- if @user.applicants.empty?
	%p.lead= t('.empty')

- else
	%table.table.table-striped
		%thead
			%tr
				%th #
				%th= t('.applicant_name')
				%th= t('.requests_count')
		%tbody
			- i = 1
			- @user.applicants.each do |applicant|
				%tr
					%td= i
					- i += 1
					%td= link_to applicant.name, '#'
					%td= applicant.requests.count
