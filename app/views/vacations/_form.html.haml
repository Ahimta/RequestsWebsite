= form_for @vacation do |f|
	%div.page-header
		%h1= action
	%div= f.hidden_field :user_id, value: 0
	%div= f.text_field :applicant, placeholder: t(:applicant), title: t(:applicant), autofocus: ''
	%div= f.text_field :duration, placeholder: t('.duration'), title: t('.duration')
	- klass = 'input-mini'
	%div
		= t(:from)
		= f.text_field :from_day, placeholder: t('.day'), title: t('.day'), class: klass
		= f.text_field :from_month, placeholder: t('.month'), title: t('.month'), class: klass
		= f.text_field :from_year, placeholder: t('.year'), title: t('.year'),class: klass
	%div
		= t(:to)
		= f.text_field :to_day, placeholder: t('.day'), title: t('.day'), class: klass
		= f.text_field :to_month, placeholder: t('.month'), title: t('.month'), class: klass
		= f.text_field :to_year, placeholder: t('.year'), title: t('.year'),class: klass
	= f.submit action, class: 'btn btn-success btn-large'
