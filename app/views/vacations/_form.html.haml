= provide :title, action

= form_for @vacation do |f|
	= render '/requests/form', f: f, type: Vacation::Type, action: action
	
	%div= f.text_field :duration, placeholder: t('.duration')
	%div= f.text_field :from, placeholder: t('.from')
	%div= f.text_field :to, placeholder: t('.to')
	
	= render '/passports/passport', passport: @vacation.passport
	= render '/passports/form', f: f
	
	= render '/shared/form_footer', f: f, action: action
